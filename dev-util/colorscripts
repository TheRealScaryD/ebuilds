EAPI=8

DESCRIPTION="A collection of shell color scripts for display"
HOMEPAGE="https://gitlab.com/dwt1/shell-color-scripts"
SRC_URI="https://gitlab.com/dwt1/shell-color-scripts.git -> shell-color-scripts-${PV}.git"

LICENSE="GPL-2"
SLOT="0"
KEYWORDS="~amd64"

IUSE=""

# The scripts are just shell scripts, so there are no build dependencies.
# The `bash` dependency is for the scripts themselves.
# `git` is a build-time dependency for fetching the source.
RDEPEND="
 >=sys-apps/bash-4.4
"
BDEPEND="
 dev-vcs/git
"

src_unpack() {
 # We use git to clone the repository directly into the portage work directory.
 eclone
}

src_install() {
 # Install the scripts to a standard location, like /usr/bin.
 # The `-m755` flag ensures the scripts are executable.
 # The `doins` function is a portage helper for installation.
 doins -r shell-color-scripts/*
}
